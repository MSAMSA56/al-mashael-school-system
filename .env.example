# نظام إدارة مدرسة المشاعل - متغيرات البيئة

# إعدادات الخادم
PORT=3000
NODE_ENV=development

# إعدادات JWT
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# إعدادات قاعدة البيانات (SQLite)
DATABASE_URL=./al_mashael_school.db

# إعدادات الواجهة الأمامية
VITE_API_URL=http://localhost:3000

# إعدادات الجلسة
SESSION_SECRET=your_session_secret_key

# إعدادات البريد الإلكتروني (اختياري)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# إعدادات WhatsApp (اختياري)
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_PHONE_NUMBER=+966xxxxxxxxx

# إعدادات الملفات
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,jpg,jpeg,png,gif

# إعدادات الأمان
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT=100

# إعدادات التطوير
DEBUG=false
LOG_LEVEL=info
